<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/mylayout">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:openDrawer="start"
        tools:context=".MainActivity">
        <RelativeLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B1E95">
        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/drawer"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#1A1B4F"
                    app:navigationIcon="@drawable/baseline_view_headline_24"
                    app:title="My Portfolio"
                    app:titleTextColor="@color/white"
                    app:menu="@menu/savedetails"
                    />

            </com.google.android.material.appbar.AppBarLayout>

        </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navigation_view"
            app:headerLayout="@layout/activity_nav_header"
            android:background="@drawable/drawer_bg"
            app:menu="@menu/my_navitems"
            android:layout_gravity="start">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the link here"
                    android:layout_above="@+id/githublink"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="20sp"
                    android:textColorHint="@color/white"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/saveChanges"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_above="@+id/githublink"
                    android:layout_alignEnd="@+id/EditLink"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="226dp"
                    android:layout_marginEnd="-17dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/check"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_above="@+id/githublink"
                    android:background="#858282"/>
                <ImageButton
                    android:id="@+id/githublink"
                    android:layout_width="79dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/github" />

                <ImageButton
                    android:id="@+id/instalink"
                    android:layout_width="67dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/githublink"
                    android:backgroundTintMode="screen"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/instagram" />

                <ImageButton
                    android:id="@+id/linkedinlink"
                    android:layout_width="69dp"
                    android:layout_height="62dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/instalink"
                    android:backgroundTintMode="screen"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/linkedin" />
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>



</RelativeLayout>
